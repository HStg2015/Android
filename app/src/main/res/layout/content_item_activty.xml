<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:id="@+id/nsv"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_item_activty" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="refuhack.bitspls.de.hstuttgart15.activities.ItemActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
        android:id="@+id/descriptionItem" android:text="Beschreibung"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp" />

        <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
            android:id="@+id/phoneNumber" android:text="keine Telefonnummer angegeben :("
            android:layout_marginTop="20dp"
            android:layout_marginLeft="18dp"
            android:layout_below="@+id/descriptionItem"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="18dp" />
        <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
            android:id="@+id/zipcode" android:text="keine Stadt angegeben :("
            android:layout_marginTop="5dp"
            android:layout_marginLeft="18dp"
            android:layout_below="@+id/phoneNumber"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="18dp" />
        <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
            android:id="@+id/mail" android:text="keine E-mail angegeben :("
            android:layout_marginTop="5dp"
            android:layout_marginLeft="18dp"
            android:layout_below="@+id/zipcode"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="18dp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/print_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="18dp"
            android:layout_below="@+id/mail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="18dp"
            android:onClick="onClick"
            android:text="Drucken"
            android:background="#FEA623" />


    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>

