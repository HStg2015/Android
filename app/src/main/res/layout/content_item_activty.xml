<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:id="@+id/nsv"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_item_activty" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="refuhack.bitspls.de.hstuttgart15.activities.ItemActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nameItem"
        android:textStyle="bold"
        android:capitalize="words"
        android:text="Title"
        android:layout_marginTop="@dimen/text_margin"
        android:layout_alignLeft="@+id/descriptionItem"
        android:layout_alignStart="@+id/descriptionItem" />

    <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
        android:id="@+id/descriptionItem" android:text="Beschreibung"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="18dp"
        android:layout_below="@+id/nameItem"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp" />

    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>

